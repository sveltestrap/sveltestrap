{
  "name": "@sveltestrap/sveltestrap",
  "description": "Bootstrap components for Svelte",
  "version": "7.0.2",
  "license": "MIT",
  "homepage": "https://sveltestrap.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/sveltestrap/sveltestrap.git"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "svelte",
    "components",
    "sveltestrap",
    "bootstrap",
    "javascript",
    "accordian",
    "alerts",
    "badges",
    "breadcrumbs",
    "buttons",
    "cards",
    "dropdowns",
    "forms",
    "icons",
    "inputs",
    "lists",
    "modals",
    "notifications",
    "pagination",
    "popovers",
    "portals",
    "progress",
    "spinners",
    "tabs",
    "tables",
    "toasts",
    "tooltips"
  ],
  "scripts": {
    "start": "pnpm build && storybook dev -p 6006",
    "build": "svelte-package --input ./src && pnpm lint:package",
    "docs:build": "storybook build -o docs && cp -r ./.storybook/docs/* ./docs",
    "docs:deploy": "pnpm run docs:build && npx gh-pages -d docs",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint -c ./.eslintrc.json --fix \"{tests/app/src,src}/**/*.{js,ts,json,svelte}\"",
    "lint:package": "publint --strict",
    "format": "prettier --write \"{tests/app/src,src}/**/*.{js,ts,json,svelte}\"",
    "test": "vitest --run --coverage",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage && open ./coverage/index.html",
    "test:integration": "pnpm --prefix ./tests/app install && npx playwright test",
    "test:integration:report": "pnpm test:integration && npx playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@storybook/addon-docs": "^7.6.16",
    "@storybook/addon-essentials": "^7.6.16",
    "@storybook/addon-interactions": "^7.6.16",
    "@storybook/addon-links": "^7.6.16",
    "@storybook/addon-svelte-csf": "^4.1.0",
    "@storybook/addons": "^7.6.16",
    "@storybook/blocks": "^7.6.16",
    "@storybook/manager-api": "^7.6.16",
    "@storybook/svelte": "^7.6.16",
    "@storybook/svelte-vite": "^7.6.16",
    "@storybook/svelte-webpack5": "^7.6.16",
    "@storybook/theming": "^7.6.16",
    "@sveltejs/package": "^2.2.4",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/svelte": "^4.0.5",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/coverage-v8": "^0.34.6",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.54.0",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-svelte": "^2.35.1",
    "eslint-plugin-vitest": "^0.3.10",
    "husky": "^6.0.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^10.5.4",
    "postcss": "^8.4.33",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.6.16",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "svelte-preprocess": "^5.1.3",
    "typescript": "^4.3.2",
    "vite": "^5.0.12",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8"
  },
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0 || ^5.0.0-next.0"
  },
  "browserslist": "last 2 versions"
}
