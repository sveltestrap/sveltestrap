{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*.d.ts"],
  "exclude": [
    "node_modules/*",
    "tests/*",
    "src/**/*.spec.js",
    "src/**/*.js",
    "src/**/*.stories.svelte",
    "src/**/*.svelte"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es2022",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@sveltestrap/sveltestrap": ["src/index"]
    },
    "types": [
      "vitest/globals"
    ]
  }
}
